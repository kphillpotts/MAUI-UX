<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiUX.Pages.SkiaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiUX.Views"
    Title="SkiaPage"
    Background="#D6D7E3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="LightText">#d3d3d3</Color>
            <Color x:Key="DarkBackground">#181818</Color>
            <Color x:Key="HeaderBackground">#F44336</Color>
            <Color x:Key="SubHeaderBackground">#d3d3d3</Color>
            <Color x:Key="SubHeaderText">Gray</Color>

            <Color x:Key="GaugeGradientStartColor">#99C2FF</Color>
            <Color x:Key="GaugeGradientEndColor">#FB7D80</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <views:GuageControl Margin="20" HeightRequest="150" />
    </VerticalStackLayout>
</ContentPage>