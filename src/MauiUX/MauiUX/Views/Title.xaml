<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUX.Views.Title">
    <Grid HorizontalOptions="Start" RowDefinitions="AUTO, AUTO" ColumnDefinitions="*, AUTO">
        <!--<Rectangle Grid.ColumnSpan="2" Fill="{StaticResource HeaderBackground}"/>-->
        <Border BackgroundColor="{StaticResource HeaderBackground}" Grid.ColumnSpan="2"
                StrokeThickness="0">

            <Label Text="Mugello Circuit" TextColor="{StaticResource LightText}" FontSize="35" FontAttributes="Bold" Margin="20"/>
        </Border>

        <Border BackgroundColor="{StaticResource SubHeaderBackground}" Grid.ColumnSpan="2"
                Grid.Row="1" Grid.Column="1"
                StrokeThickness="0">
            <!--<BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="{StaticResource SubHeaderBackground}"/>-->
            <Label Text="JUNE 3, 2018" HorizontalOptions="End"  VerticalOptions="Center" Margin="20,0" TextColor="{StaticResource SubHeaderText}"/>
        </Border>
    </Grid>
</ContentView>
