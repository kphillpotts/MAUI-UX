<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiUX.Views.DescriptionPane">
    <Grid RowSpacing="0" ColumnSpacing="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="FadeToBlack.png" Aspect="Fill" HorizontalOptions="Fill"/>
        <BoxView BackgroundColor="{StaticResource DarkBackground}" Grid.Row="1"/>
        <Label x:Name="Description" Grid.Row="1" TextColor="{StaticResource LightText}" FontSize="Large" Text="This is where the detail text goes" HorizontalTextAlignment="Center"/>
    </Grid>
</ContentView>
